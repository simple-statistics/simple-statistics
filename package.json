{
  "name": "simple-statistics",
  "version": "3.0.0",
  "description": "Simple Statistics",
  "author": "Tom MacWright <tom@macwright.org> (http://macwright.org/)",
  "repository": {
    "type": "git",
    "url": "git://github.com/simple-statistics/simple-statistics.git"
  },
  "files": [
    "bower.json",
    "src",
    "dist"
  ],
  "dependencies": {},
  "devDependencies": {
    "are-we-flow-yet": "^1.0.0",
    "babel-eslint": "^7.2.2",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^3.8.1",
    "flow-bin": "^0.44.0",
    "husky": "^0.13.3",
    "jsdoctest": "1.7.0",
    "lint-staged": "^3.4.0",
    "mocha": "3.2.0",
    "prettier": "^1.1.0",
    "random-js": "^1.0.4",
    "rollup": "^0.41.6",
    "rollup-plugin-flow": "^1.1.1",
    "standard-changelog": "^1.0.1",
    "tap": "^10.1.1",
    "uglify-js": "^2.6.2"
  },
  "scripts": {
    "test": "are-we-flow-yet src && flow check src && eslint src/*.js test/*.js && npm run build && tap --coverage test/*.js && npm run jsdoctest",
    "test-sauce": "node scripts/browser_test.js",
    "build": "npm run bundle && npm run minify",
    "format": "prettier --write 'src/**/*.js' --single-quote",
    "changelog": "standard-changelog -i CHANGELOG.md --overwrite",
    "bundle": "mkdir -p dist && rollup -c rollup.config.js",
    "minify": "uglifyjs dist/simple-statistics.js -c -m --in-source-map=dist/simple-statistics.js.map --source-map=dist/simple-statistics.min.js.map -o dist/simple-statistics.min.js",
    "jsdoctest": "mocha --require jsdoctest index.js",
    "precommit": "lint-staged --verbose",
    "prepublish": "npm run build && ./scripts/update_readme.js"
  },
  "main": "dist/simple-statistics.js",
  "engines": {
    "node": "*"
  },
  "license": "ISC",
  "keywords": [
    "descriptive",
    "linear",
    "math",
    "probability",
    "regression",
    "statistics"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --single-quote",
      "git add"
    ]
  }
}
